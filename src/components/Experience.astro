---
import { supabase } from "../lib/supabase";

// Fetch all experiences
const { data: experiences, error } = await supabase
  .from("experiences")
  .select("*");

if (error) {
  console.error("Error fetching experiences:", error.message);
}
---

<section id="experience" class="py-20 bg-gray-900">
  <div class="container mx-auto px-8 border border-green-500 rounded-lg p-6">
    <h2 class="text-4xl font-bold text-orange-500 text-center mb-8">
      WORK EXPERIENCE
    </h2>

    <div class="space-y-8 border-t border-green-500">
      {Array.isArray(experiences) && experiences.length > 0 ? (
        experiences.map((experience, index) => (
          <div key={index} class="grid grid-cols-2 gap-4 bg-gray-800 rounded-lg p-6">
            <!-- Kiri: Logo & Detail -->
            <div class="flex items-center gap-4 border-r border-green-500 pr-6">
              <img src={experience.avatar_url}alt={experience.company_name} class="w-16 h-16" />
              <div>
                <h3 class="text-xl font-semibold text-white">
                  {experience.company_name}
                </h3>
                <p class="text-gray-300">{experience.position}</p>

                <p class="text-sm text-gray-400">Tools:</p>
                <ul class="flex flex-wrap gap-x-3 text-gray-300 sm:text-left">
                  {Array.isArray(experience.tools_used) && experience.tools_used.length > 0 ? (
                    experience.tools_used.map((tool, idx) => (
                      <li key={idx} class="text-white list-none">{tool}</li>
                    ))
                  ) : (
                    <li class="text-gray-400">Data tools belum tersedia.</li>
                  )}
                </ul>
              </div>
            </div>
            <!-- Kanan: Deskripsi -->
            <p class="flex items-center text-gray-300">
              {experience.description}
            </p>
          </div>
        ))
      ) : (
        <p class="text-gray-400 text-center">Tidak ada data pengalaman kerja.</p>
      )}
    </div>
  </div>
</section>
