---
import { supabase } from "../lib/supabase";
// Fetch profile data
const { data: profile, error } = await supabase
  .from("profiles")
  .select("*")
  .limit(1)
  .maybeSingle();

if (error) {
  console.error("Error fetching profile:", error.message);
}
---

<section
  class="min-h-screen flex items-center justify-center bg-gray-900 relative overflow-hidden"
>
  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 w-full border-2 border-green-500 rounded-lg p-6 transition-all duration-300 hover:border-orange-500 hover:shadow-orange-500/50 hover:shadow-lg"
  >
    {/* Grid Layout */}
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center border border-green-500 rounded-lg p-6 bg-gray-800 bg-opacity-50 backdrop-blur-md transition-all duration-300"
    >
      {/* Kiri - Data Profile */}
      <div class="text-center md:text-left px-8 py-12">
        {/* Judul */}
        <h1 class="text-5xl md:text-6xl font-bold mb-4">
          <span class="text-orange-500 animate-pulse">PORTOFOLIO</span>
        </h1>
        <h2 class="text-3xl md:text-4xl font-semibold text-white mb-6">
          Haliza Arini
        </h2>

        {/* Deskripsi */}
        <p
          class="text-lg text-gray-300 mb-6 leading-relaxed opacity-0 transition-opacity duration-700 delay-300 animate-fadeIn"
        >
          Ex - Intern MSIB Program and Academic Media Learning at PT Bukit
          Makmur Mandiri Utama (BIRU) | Educational Technology
        </p>

        {/* Informasi Kontak */}
        <div
          class="flex flex-wrap justify-center md:justify-start gap-6 border-t border-green-500 pt-4"
        >
          <a
            href="tel:+6289604080269"
            class="text-gray-300 hover:text-orange-500 transition-all duration-300"
          >
            +6289604080269
          </a>
          <a
            href="mailto:halizaarini@gmail.com"
            class="text-gray-300 hover:text-orange-500 transition-all duration-300"
          >
            halizaarini@gmail.com
          </a>
          <a
            href="https://linkedin.com/in/halizaarini"
            target="_blank"
            class="text-gray-300 hover:text-orange-500 transition-all duration-300"
          >
            linkedin.com/in/halizaarini
          </a>
        </div>
      </div>

      {/* Kanan - Foto Profile */}
      <div class="relative">
        <img
          src={profile?.avatar_url || "/default-avatar.png"}
          alt="Haliza Arini"
          class="w-full h-auto md:h-full object-cover rounded-lg shadow-lg border-l-2 border-green-500 transition-transform duration-500 hover:scale-105"
        />

        {/* Tahun di sudut kanan bawah */}
        <span
          class="absolute bottom-4 right-4 bg-green-500 text-white px-4 py-2 text-lg font-bold rounded-full shadow-md animate-bounce"
        >
          2025
        </span>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease-in-out forwards;
  }
</style>
