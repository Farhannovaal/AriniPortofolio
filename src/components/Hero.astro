---
import { supabase } from "../lib/supabase";
// Fetch profile data
const { data: profile } = await supabase.from("profiles").select("*").single();
---

<section
  class="min-h-screen flex items-center justify-center relative overflow-hidden"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <div class="text-center max-w-3xl mx-auto">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4">
        <span class="text-orange-500">{profile.headline}</span>
      </h1>
      <h2 class="text-2xl sm:text-3xl md:text-4xl mb-6">{profile.full_name}</h2>
      <p class="text-lg sm:text-xl text-gray-300 mb-6 leading-relaxed">
        {profile.bio}
      </p>
      <div class="flex flex-wrap justify-center gap-4 sm:gap-6">
        <a
          href={`tel:${profile.phone}`}
          class="text-gray-300 hover:text-orange-500 break-all"
        >
          {profile.phone}
        </a>
        <a
          href={`mailto:${profile.email}`}
          class="text-gray-300 hover:text-orange-500 break-all"
        >
          {profile.email}
        </a>
        <a
          href={profile.linkedin_url}
          target="_blank"
          class="text-gray-300 hover:text-orange-500 break-all"
        >
          LinkedIn
        </a>
      </div>
    </div>
  </div>
</section>
